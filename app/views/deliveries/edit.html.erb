<div class="container">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2 form-horizontal card-delivery">
			<h3 class="text-center headline-delivery"><strong>配送先編集</strong></h3>
			<%= form_for(@delivery_address) do |f| %>
			<%= render 'layouts/error_messages', model: f.object %>
				<div class="form-group">
					<label class="col-sm-3">郵便番号</label>
					<span class="col-sm-4">
						<%= f.text_field :zip_code, class: 'form-control' %>
					</span>
				</div>

				<div class="form-group">
					<label class="col-sm-3">住所</label>
					<span class="col-sm-9">
						<%= f.text_field :address, class: 'form-control' %>
					</span>
				</div>

				<div class="form-group">
					<label class="col-sm-3">宛名</label>
					<span class="col-sm-7">
						<%= f.text_field :destination_name, class: 'form-control' %>
					</span>
				</div>
				<div class="col-sm-4 col-sm-offset-4">
				 	<%= f.submit '変更保存', class:"btn btn-delivery" %>
				</div>
			<% end %>
		</div>
	</div>
</div>

