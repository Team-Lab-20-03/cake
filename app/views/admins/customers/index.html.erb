<div class="container">
	<div class="row">
		<h3>会員一覧</h3>
		<table class="table">
			<tr>
				<th>会員ID</th>
				<th>氏名</th>
				<th>メールアドレス</th>
				<th>ステータス</th>
			</tr>
			<% @customers.each do |customer| %>
				<tr>
					<th><%= customer.id %></th>
					<th>
						<%= link_to admins_customer_path(customer.id) do %>
							<%= customer.first_name %><%= customer.last_name %>
						<% end %>
					</th>
					<th><%= customer.email %></th>
					<th><%= customer.is_active %></th>
				</tr>
			<% end %>
		</table>
	</div>
</div>
