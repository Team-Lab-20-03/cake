<div class="container">
	<div class="row">
		<h3><%= @customer.last_name %> <%= @customer.first_name %> さんの会員詳細</h3>
		<div class="">
			<label class="col-sm-2 text-right">会員ID</label>
			<%= @customer.id %>　<label class="label label-info"><%= @customer.is_active %>会員</label>
		</div>
		<div class="col-xs-12">
			<label class="col-sm-2 text-right">氏名</label>
			<%= @customer.last_name %> <%= @customer.first_name %>
		</div>
		<div class="col-xs-12">
			<label class="col-sm-2 text-right">フリガナ</label>
			<%= @customer.kana_last_name %> <%= @customer.kana_first_name %>
		</div>
		<div class="col-xs-12">
			<label class="col-sm-2 text-right">郵便番号</label>
			<%= @customer.main_zip_code %>
		</div>
		<div class="col-xs-12">
			<label class="col-sm-2 text-right">住所</label>
			<%= @customer.main_address %>
		</div>
		<div class="col-xs-12">
			<label class="col-sm-2 text-right">電話番号</label>
			<%= @customer.phone_number %>
		</div>
		<div class="col-xs-12">
			<label class="col-sm-2 text-right">メールアドレス</label>
			<%= @customer.email %>
		</div>
		<div class="col-sm-2"></div>
		<%= link_to '編集する', edit_admins_customer_path(@customer), class: 'btn btn-primary' %>
		<%= link_to '注文履歴一覧', admins_orders_path(@customer.orders), class: 'btn btn-default' %>
	</div>
</div>
