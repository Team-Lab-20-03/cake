<div class="container">
	<div class="row">

		<h3 class="text-center"><strong><%= @customer.last_name %> <%= @customer.first_name %></strong> さんの会員情報編集</h3>
		<div class="col-xs-10 col-xs-offset-1 form-horizontal">
			<%= form_for [:admins, @customer], html: { class: 'form-horizontal' } do |f| %>

				<div class="form-group">
					<label class="col-sm-3">会員ID</label>
					<div class="col-sm-1"><%= @customer.id %></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3">氏名</label>
					<div class="col-sm-3">
						<%= f.text_field :last_name, class: 'form-control' %></div>
					<div class="col-sm-3">
						<%= f.text_field :first_name, class: 'form-control' %></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3">フリガナ</label>
					<div class="col-sm-3">
						<%= f.text_field :kana_last_name, class: 'form-control' %></div>
					<div class="col-sm-3">
						<%= f.text_field :kana_first_name, class: 'form-control' %></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3">郵便番号</label>
					<div class="col-sm-3">
						<%= f.text_field :main_zip_code, class: 'form-control' %></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3">住所</label>
					<div class="col-sm-6">
					<%= f.text_field :main_address, class: 'form-control' %></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3">電話番号</label>
					<div class="col-sm-3">
						<%= f.text_field :phone_number, class: 'form-control' %></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3">メールアドレス</label>
					<div class="col-sm-3">
						<%= f.text_field :email, class: 'form-control' %></div>
				</div>

				<div class="form-group">
					<label class="col-sm-3">会員ステータス</label>
					<div class="col-sm-3">
						<%= f.radio_button :is_active, :有効, checked: true %>
				    <%= f.label :name, "有効", style: "display: inline-block;" %>
				    <%= f.radio_button :is_active, :退会済み %>
				    <%= f.label :name, "退会済み", style: "display: inline-block;" %>
			    </div>
				</div>

				<div class="col-sm-12"></div>
				<%= f.submit "変更保存", class: 'btn btn-primary col-sm-offset-3' %>
				<%= link_to "会員詳細に戻る", admins_customer_path(@customer), class: 'btn btn-default' %>
			<% end %>
		</div>
	</div>
</div>
