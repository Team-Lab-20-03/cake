<div class="container">
	<div class="row">
		<h3>商品編集</h3>
	</div>
	<div class="row">
		<%= form_for [:admins, @product] do |f| %>
			<div class="col-xs-4">
				<%= attachment_image_tag @product, :image, size:"250x300" %>
				<%= f.attachment_field :image %>
			</div>
			<div class="col-xs-4">
				<%= f.label :name, "商品名" %>
				<%= f.text_field :name, autofocus: true %><br />
				<%= f.label :introduction, "説明文" %>
				<%= f.text_area :introduction, autofocus: true %><br />
				<%= f.label :genre_id, "ジャンル選択" %>
				<%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "--選択してください" %><br />
				<%= f.label :price, "税抜価格" %>
				<%= f.text_field :price, autofocus: true %>円<br />
				<%= f.label :is_active, "販売ステータス" %>
				<%= f.select :is_active, Product.is_actives.keys, :include_blank => "--選択してください" %><br />
			</div>
			<div class="col-xs-4 ">
				<%= f.submit "変更を保存", class: "btn btn-success"%>
			</div>
		<% end %>
	</div>
</div>