<div class="bg-admin">
	<h3 class="text-center headline-admin"><strong>商品詳細</strong></h3>
	<div class="container">
		<div class="row">
			<div class="col-xs-10 col-xs-offset-1 card-admin">
				<div class="col-sm-5">
					<%= attachment_image_tag @product, :image, size:"250x300" %>
				</div>
				<div class="col-sm-7">
					<div class="row">
						<label class="col-sm-4 caption-admin">商品名</label>
						<p class="col-sm-8 p-admin"><%= @product.name %></p>
					</div>
					<div class="row">
						<label class="col-sm-4 caption-admin">説明文</label>
						<p class="col-sm-8 p-admin"><%= @product.introduction %></p>
					</div>
					<div class="row">
						<label class="col-sm-4 caption-admin">ジャンル</label>
						<p class="col-sm-8 p-admin"><%= @product.genre.name %></p>
					</div>
					<div class="row">
						<label class="col-sm-4 caption-admin">税抜価格(税込価格)</label>
						<p class="col-sm-8 p-admin"><%= @product.price %>(<%= @product.tax_price %>)円</p>
					</div>
					<div class="row">
						<label class="col-sm-4 caption-admin">販売ステータス</label>
						<p class="col-sm-8 p-admin"><%= @product.is_active %></p>
					</div>

					<%= link_to "編集する", edit_admins_product_path(@product.id), class: "btn btn-admin col-sm-4 col-sm-offset-4"%>
				</div>
			</div>
		</div>
	</div>
</div>