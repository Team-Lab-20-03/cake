<div class="container">
	<div class="row">
		<h3>商品詳細</h3>
		<div class="col-xs-4">
			<%= attachment_image_tag @product, :image, size:"250x300" %>
		</div>
		<div class="col-xs-4">
			<p>商品名　<%= @product.name %></p>
			<p>説明文　<%= @product.introduction %></p>
			<p>ジャンル　<%= @product.genre.name %></p>
			<p>税抜価格(税込価格)　<%= @product.price %>(<%= @product.tax_price %>)円</p>
			<p>販売ステータス　<%= @product.is_active %></p>
		</div>
		<div class="col-xs-4 ">
			<%= link_to "編集する", edit_admins_product_path(@product.id), class: "btn btn-success"%>
		</div>
	</div>
</div>