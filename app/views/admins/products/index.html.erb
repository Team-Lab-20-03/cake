<h3 class="text-center"><strong>商品一覧</strong></h3>
<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<%= link_to "商品追加", new_admins_product_path, class: 'btn btn-default' %>
			<table class="table table-responsive">
				<thead>
					<tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @products.each do |product| %>
						<tr>
							<td><%= product.id %></td>
							<td><%= link_to "#{product.name}", admins_product_path(product.id) %></td>
							<td><%= product.price %>円</td>
							<td><%= product.genre.name %></td>
							<td><%= product.is_active %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div><!--col-->
	</div><!--row-->
</div><!--container-->