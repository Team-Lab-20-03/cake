<div class="container">
	<div class="row">
		<div class="col-xs-10 text-center">
			<h3>商品一覧</h3>
			<%= link_to "商品追加", new_admins_product_path %>
			<table class="table">
				<thead>
					<tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @products.each do |product| %>
						<tr>
							<td><%= product.id %></td>
							<td><%= link_to "#{product.name}", admins_product_path(product.id) %></td>
							<td><%= product.price %>円</td>
							<td><%= product.genre.name %></td>
							<td><%= product.is_active %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div><!--col-->
	</div><!--row-->
</div><!--container-->