<h3 class="text-center"><strong>管理者ログイン</strong></h3>
<div class="container">
  <div class="row">
   <div class="col-xs-10 col-xs-offset-1 form-horizontal">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label "メールアドレス", class: 'col-sm-3 col-sm-offset-2' %>
          <div class="col-sm-6">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "パスワード", class: 'col-sm-3 col-sm-offset-2' %>
          <div class="col-sm-6">
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>
        </div>

        <%= f.submit "ログイン", class: 'btn btn-primary col-sm-4 col-sm-offset-4' %>
      <% end %>
    </div>
  </div>
</div>