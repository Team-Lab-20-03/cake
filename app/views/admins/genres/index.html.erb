<div class="container">
	<div class="row">
		<div class="col-xs-10">
			<h3>ジャンル一覧、追加</h3>
			<div class="form">
				<%= form_for [:admins, @genre] do |f| %>
				    <%= f.label :name, "ジャンル" %>
				    <%= f.text_field :name %>
				    <%= f.radio_button :is_active, :有効, checked: true %>
				    <%= f.label :name, "有効", style: "display: inline-block;" %>
				    <%= f.radio_button :is_active, :無効 %>
				    <%= f.label :name, "無効", style: "display: inline-block;" %>
				    <%= f.submit "追加", class: "btn btn-sucsess" %>
				<% end %>
			</div><!--form-->

			<div class="genre-index">
				<table class="table">
					<thead>
						<tr>
							<th>ジャンル</th>
							<th>状態</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @genres.each do |genre| %>
							<tr>
								<td><%= genre.name %></td>
								<td><%= genre.is_active %></td>
								<td><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-primary" %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>