<div class="container">
	<div class="row">
		<div class="col-xs-10">
			<h3>ジャンル編集</h3>
			<div class="form">
				<%= form_for [:admins, @genre] do |f| %>
				    <%= f.label :name, "ジャンル" %>
				    <%= f.text_field :name %>
				    <%= f.radio_button :is_active, :有効, checked: true %>
				    <%= f.label :name, "有効", style: "display: inline-block;" %>
				    <%= f.radio_button :is_active, :無効 %>
				    <%= f.label :name, "無効", style: "display: inline-block;" %>
				    <%= f.submit "変更を保存する", class: "btn btn-sucsess" %>
				<% end %>
			</div><!--form-->
		</div>
	</div>
</div>