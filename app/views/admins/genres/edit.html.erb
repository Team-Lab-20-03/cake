<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<h3>ジャンル編集</h3>
			<%= form_for [:admins, @genre], html: { class: 'form-horizontal' } do |f| %>
		    <%= f.label :name, "ジャンル", class: 'col-sm-3' %>
		    <div class="col-sm-4"><%= f.text_field :name, class: 'form-control' %></div>
		    <div class="col-sm-5">
			    <%= f.radio_button :is_active, :有効, checked: true %>
			    <%= f.label :name, "有効", style: "display: inline-block;" %>
			    <%= f.radio_button :is_active, :無効 %>
			    <%= f.label :name, "無効", style: "display: inline-block;" %>
			    <%= f.submit "保存", class: "btn btn-primary" %>
		    </div>
			<% end %>
		</div>
	</div>
</div>