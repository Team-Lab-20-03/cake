<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<h3>注文履歴一覧</h3>
			<table class="table table-responsive">
				<tr>
					<th>購入日時</th>
					<th>購入者</th>
					<th>注文個数</th>
					<th>注文ステータス</th>
				</tr>
				<% @orders.each do |order| %>
					<tr>
						<td>
							<%= link_to admin_order_path(order.id) do %>
								<%= order.created_at.strftime('%Y/%M/%D/%H:%M:%S') %>
							<% end %>
						</td>
						<td><%= order.customer_last_name %><%= order.customer_first_name %></td>
						<td><%= order.total_count %></td>
						<td><%= order.ordered_status %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>