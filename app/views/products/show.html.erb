<div class="container">
	<div class="row">
		<div class="col-xs-10">

		<%= attachment_image_tag @product_image :image, :size => '200x200'%>

		<h1><%= @product.name %></h1>
		<p><%= @product.introduction %></p>
		<p><%= "¥#{(@product.price + tax_price}" %>(税込)</p>

		<%= form_for(@cart_item) do |f| %>

			<%= f.select :count, (1..10) %>

			<% if @product.is_active == true %>
			<%= f.submit "カートに入れる" %>
			<% else %>
			<%= f.submit "売り切れ" %>
			<% end %>

		<% end %>

		</div>
	</div>
</div>