<div class="container">
	<div class="row" Valign=center align=center>
    	<div class="text-center">
      		<h4><%= render "products/genre_search", genres: @genre %></h4>
    	</div>

	<div class="row">
		<div class="text-center" >
			<table Valign=center align=center>
		    	<td style="border:none;" >
		        	<%= attachment_image_tag @product, :image, size: "400x400" %>
		        </td>
		        <td style="border:none;" align=center >
		        	<h4><%= @product.name %></h4>
		        	<p><%= @product.introduction %></p>
		            <p><%= "¥#{(@product.tax_price)}" %>(税込)</p></br>

		            <% if @product.is_active == "販売中" %>
         			    <%= form_for(@cart_item) do |f| %>
							<%= f.select :quantity,(1..10),{},class:"form-control" %>
		            		<%= f.hidden_field :product_id, :value => @product.id %>
						 	<%= f.submit "カートに入れる", class:"btn btn-primary" %>
						<% end %>
		            <% else %>
		            	<p>売り切れ</p>
		            <% end %>
		        </td>
		    </table>
		 </div>
	</div>

	</div>
</div>