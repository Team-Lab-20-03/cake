<div class="container">
  <div class="row">
    <div class="col-xs-10 text-center">
      <h4><%= render "products/genre_search", genres: @genre %></h4>
    </div>

<div class="row">
          <% @products.each do |product| %>
          <div class="col-md-3">
              <%= link_to product_path(product) do %>
              <%= attachment_image_tag product, :image, size: "200x200" %>
              <%= product.name %>
              <% end %>
              <%= "#{product.price}円(税抜)" %>
           </div>
         <% end %>
</div>


