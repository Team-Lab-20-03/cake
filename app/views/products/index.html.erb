<div class="container">
  <div class="row">
    <div class="col-xs-10">
      <table class="table">
        <thead>
          <tr>
            <td colspan="3" class="fontsize">ジャンル検索</td>
          </tr>
        </thead>
        <tbody>
          <td><%= render "products/genre_search", genres: @genre %></td>
        </tbody>
      </table>

      <div class="col-xs-10">
        <table class="table">
          <tbody>
            <tr>
              <% @products.each do |product| %>
                <td class="image_id">
                  <%= link_to product_path(product) do %>
                  <%= attachment_image_tag product, :image_id, size: "280x280" %>
                  <% end %>
                </td>
                <td class="name">
                  <%= product.name %>
                  <p>商品価格：¥<%= product.price %></p>
                  <%= link_to "商品詳細", product_path(product), class: "btn btn-primary" %>
                </td>
                <td class="introduction">
                  <%= product.intoroduction %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>