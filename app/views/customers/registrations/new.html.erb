<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

 <table class="table">
    <tr>
      <th>名前</th>
      <th>(姓)</th>
      <td><%= f.text_field :last_name %></td>
      <th>(名)</th>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <th>(セイ)</th>
      <td><%= f.text_field :kana_last_name %></td>
      <th>(メイ)</th>
      <td><%= f.text_field :kana_first_name %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <th></th>
      <td><%= f.text_field :main_zip_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <th></th>
      <td><%= f.text_field :main_address %></td>
    </tr>
    <tr>
      <th>電話番号(ハイフンなし)</th>
      <th></th>
      <td><%= f.text_field :phone_number %></td>
    </tr>
    <tr>
      <th>パスワード(6文字以上)</th>
      <th></th>
      <td>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </td>
    </tr>
    <tr>
      <th>パスワード(確認用)</th>
      <th></th>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<h3>既に登録済みの方</h3>
<%= link_to "こちら", new_customer_session_path %>からログインしてください
