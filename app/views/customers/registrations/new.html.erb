<!-- bootstrap使用 -->
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 form-horizontal card-sign">
      <h3 class="text-center headline-sign"><strong>新規会員登録</strong></h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label "名前", class: 'col-sm-3 caption-sign' %>
          <p class="col-sm-1 p-sign">(姓)</p>
          <div class="col-sm-3">
            <%= f.text_field :last_name, class: 'form-control' %></div>
          <p class="col-sm-1 p-sign">(名)</p>
          <div class="col-sm-3">
            <%= f.text_field :first_name, class: 'form-control' %></div>
        </div>

        <div class="form-group">
          <%= f.label "フリガナ", class: 'col-sm-3 caption-sign' %>
          <div class="col-sm-1 p-sign">(セイ)</div>
          <div class="col-sm-3">
            <%= f.text_field :kana_last_name, class: 'form-control' %></div>
          <div class="col-sm-1 p-sign">(メイ)</div>
          <div class="col-sm-3">
            <%= f.text_field :kana_first_name, class: 'form-control' %></div>
        </div>

        <div class="form-group">
          <%= f.label "メールアドレス", class: 'col-sm-3 caption-sign' %>
          <div class="col-sm-3 col-sm-offset-1">
            <%= f.text_field :email, class: 'form-control' %></div>
        </div>

        <div class="form-group">
          <%= f.label "郵便番号（ハイフンあり）", class: 'col-sm-3 caption-sign' %>
          <div class="col-sm-3 col-sm-offset-1">
            <%= f.text_field :main_zip_code, class: 'form-control' %></div>
        </div>

        <div class="form-group">
          <%= f.label "住所", class: 'col-sm-3 caption-sign' %>
          <div class="col-sm-7 col-sm-offset-1">
            <%= f.text_field :main_address, class: 'form-control' %></div>
        </div>
        <div class="form-group">
          <%= f.label "電話番号（ハイフンなし）", class: 'col-sm-3 caption-sign' %>
          <div class="col-sm-3 col-sm-offset-1">
            <%= f.text_field :phone_number, class: 'form-control' %></div>
        </div>

        <div class="form-group">
          <%= f.label "パスワード（6文字以上）", class: 'col-sm-3 caption-sign' %>
          <div class="col-sm-3 col-sm-offset-1">
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %></div>
        </div>

        <div class="form-group">
          <%= f.label "パスワード（確認用）", class: 'col-sm-3 caption-sign' %>
          <div class="col-sm-3 col-sm-offset-1">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %></div>
        </div>

        <div class="form-group">
          <%= f.submit '新規登録', class: 'btn btn-sign col-sm-4 col-sm-offset-4' %>
        </div>
      <% end %>

      <div class="col-sm-offset-1">
        <h4 class="headline-sign"><strong>既に登録済みの方</strong></h4>
        <p class="p-sign"><%= link_to "こちら", new_customer_session_path %>からログインしてください</p>
      </div>

    </div>
  </div>
</div>



