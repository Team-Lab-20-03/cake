<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 form-horizontal card-sign">
      <h3 class="text-center headline-sign"><strong>会員の方はこちらからログイン</strong></h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label "メールアドレス", class: 'col-sm-3 col-sm-offset-2 caption-sign' %>
          <div class="col-sm-6">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "パスワード", class: 'col-sm-3 col-sm-offset-2 caption-sign' %>
          <div class="col-sm-6">
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>
          <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: 'col-sm-6 col-sm-offset-5 text-right' %>
        </div>

        <div class="form-group">
          <%= f.submit "ログイン", class: 'btn btn-sign col-sm-4 col-sm-offset-4' %>
        </div>
      <% end %>

      <div class="col-sm-offset-2">
        <h4 class="headline-sign"><strong>登録がお済みでない方</strong></h4>
        <p class="p-sign"><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください</p>
      </div>

    </div><!-- col -->
  </div><!-- row -->
</div><!-- container -->