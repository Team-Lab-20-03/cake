
<h1>登録情報編集</h1>

<%= form_for(@customer) do |f| %>

	<div class="last_name">
		<%= f.label :last_name, '(姓)' %>
		<%= f.text_field :last_name %>
	</div>

	<div class="first_name">
		<%= f.label :first_name, '(名)' %>
		<%= f.text_field :first_name %>
	</div>

	<div class="kana_last_name">
		<%= f.label :kana_last_name, '(セイ)' %>
		<%= f.text_field :kana_last_name %>
	</div>

	<div class="kana_first_name">
		<%= f.label :kana_first_name, '(メイ)' %>
		<%= f.text_field :kana_first_name %>
	</div>

	<div class="email">
		<%= f.email_field :email %>
	</div>

	<div class="main_zip_code">
		<%= f.text_field :main_zip_code %>
	</div>

	<div class="main_address">
		<%= f.text_field :main_address %>
	</div>

	<div class="phone_number">
		<%= f.telephone_field :phone_number %>
	</div>

<% end %>

<%= link_to "編集内容を保存する", customer_show_path %>
<%= link_to "退会する", customer_quit_path %>

