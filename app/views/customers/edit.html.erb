<div class="container">
	<div class="row">
		<div class="col-xs-10">

		<h1>登録情報編集</h1>

		<%= form_for(@customer) do |f| %>

			<table class="table">
				<tbody>
					<tr class="row">
						<th class="col-xs-3">名前</th>
							<td class="col-xs-9 row">
								<div class="col-xs-4">
									<%= f.label :last_name, '(姓)' %>
									<%= f.text_field :last_name %>
									<%= f.label :first_name, '(名)' %>
									<%= f.text_field :first_name %>
								</div>
							</td>
						</tr>
					<tr class="row">
						<th class="col-xs-3">フリガナ</th>
							<td class="col-xs-9 row">
								<div class="col-xs-4">
									<%= f.label :kana_last_name, '(セイ)' %>
									<%= f.text_field :kana_last_name %>
									<%= f.label :kana_first_name, '(メイ)' %>
									<%= f.text_field :kana_first_name %>
								</div>
							</td>
						</tr>
					<tr class="row">
						<th class="col-xs-3">メールアドレス</th>
							<td class="col-xs-9 row">
								<div class="col-xs-4">
									<%= f.email_field :email %>
								</div>
							</td>
						</tr>
					<tr class="row">
						<th class="col-xs-3">郵便番号(ハイフンなし)</th>
							<td class="col-xs-9 row">
								<div class="col-xs-4">
									<%= f.text_field :main_zip_code %>
								</div>
							</td>
						</tr>
					<tr class="row">
						<th class="col-xs-3">住所</th>
							<td class="col-xs-9 row">
								<div class="col-xs-4">
									<%= f.text_field :main_address %>
								</div>
							</td>
						</tr>
					<tr class="row">
						<th class="col-xs-3">電話番号(ハイフンなし)</th>
							<td class="col-xs-9 row">
								<div class="col-xs-4">
									<%= f.telephone_field :phone_number %>
								</div>
							</td>
						</tr>
					</tbody>
				</table>

			<%= f.submit "編集内容を保存する", class:"btn btn-default"  %>
			<%= link_to "退会する", bye_confirm_customer_path, class:"btn btn-danger" %>

		<% end %>

		</div>
	</div>
</div>

