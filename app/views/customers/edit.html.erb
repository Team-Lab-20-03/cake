<div class="container">
	<div class="row">
		<h3>登録情報編集</h3>
		<%= form_for (@customer), html: { class: 'form-horizontal' } do |f| %>
			<div class="form-group">
					<label class="col-sm-2 text-right">氏名</label>
					<div class="col-xs-2">
						(姓)<%= f.text_field :last_name, class: 'form-control' %></div>
					<div class="col-xs-2">
						(名)<%= f.text_field :first_name, class: 'form-control' %></div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 text-right">フリガナ</label>
					<div class="col-xs-2">
						(セイ)<%= f.text_field :kana_last_name, class: 'form-control' %></div>
					<div class="col-xs-2">
						(メイ)<%= f.text_field :kana_first_name, class: 'form-control' %></div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 text-right">メールアドレス</label>
					<div class="col-xs-2">
						<%= f.text_field :email, class: 'form-control' %></div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 text-right">郵便番号(ハイフンなし)</label>
					<div class="col-xs-2">
					<%= f.text_field :main_zip_code, class: 'form-control' %></div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 text-right">住所</label>
					<div class="col-xs-4">
						<%= f.text_area :main_address, class: 'form-control' %></div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 text-right">電話番号(ハイフンなし)</label>
					<div class="col-xs-2">
						<%= f.text_field :phone_number, class: 'form-control' %></div>
				</div>
			</div>

			<div class="col-sm-2"></div>
			<%= f.submit "編集内容を保存する", class:"btn btn-default"  %>
			<%= link_to "退会する", bye_confirm_customer_path, class:"btn btn-danger" %>

			<% end %>

		</div>
	</div>