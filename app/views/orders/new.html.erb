<div class="container">
	<div class="row">
		<h3>注文情報入力</h3>
		<%= form_for(@order, url: confirm_orders_path) do |f| %>

			<p>支払方法</p>
				<%= f.radio_button :is_credit, :銀行振込, checked: true %>
				<%= f.label :is_credit, "銀行振込", style: "display: inline-block;" %>
				<%= f.radio_button :is_credit, :クレジットカード %>
				<%= f.label :is_credit, "クレジットカード", style: "display: inline-block;" %>

			<p>お届け先</p>
			<!--自分の住所-->
				<%= f.radio_button_tag :delivery_address_button, "ご自身の住所", checked: true %>
				<%= f.label :delivery_address, "ご自身の住所" %><br />
				<%= "〒" + current_customer.main_zip_code %><br />
				<%= current_customer.main_address %><br />
				<%= current_customer.last_name %><%= current_customer.first_name + "様" %>

			<!--登録済み済み住所-->
				<%= f.radio_button_tag :delivery_address_button, "登録済み住所から選択" %>
				<%= f.label :delivery_address, "登録済み住所から選択" %><br />
				<%= fields_for(@delivery) do |del| %>
					<%= del.collection_select :delivery, current_customer.deliveries, :id, :addressn, :name %>
				<% end %>

			<!--新しい住所-->
				<%= f.radio_button_tag :delivery_address_button, "新しいお届け先" %>
				<%= f.label :delivery_address, "新しいお届け先" %><br />
				<%= f.label :delivery_zip_code, "郵便番号" %>
				<%= f.text_field :delivery_zep_code %><br />
				<%= f.label :delivery_address, "住所" %>
				<%= f.text_field :delivery_address %><br />
				<%= f.label :delivery_name, "宛名" %>
				<%= f.text_field :delivery_name + "様" %>

			<!--確認画面へ-->
				<%= f.submit "確認画面へ"%>
		<% end %>
	</div>
</div>