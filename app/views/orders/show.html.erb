<h3 class="text-center"><strong>注文履歴詳細</strong></h3>
<div class="container">
	<div class="row">
		<div class="col-sm-8">
			<h4>注文情報</h4>
			<table class="table table-bordered">
				<tr>
					<th>注文日</th>
					<td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
				</tr>
				<tr>
					<th>配送先</th>
					<td>
						<%= @order.delivery_zip_code %>
						<%= @order.delivery_address %><br>
						<%= @order.delivery_name %>
					</td>
				</tr>
				<tr>
					<th>支払方法</th>
					<!-- 注文モデルでenum定義必要 -->
					<td><%= @order.is_credit %></td>
				</tr>
				<tr>
					<th>ステータス</th>
					<td><%= @order.ordered_status %></td>
				</tr>
			</table>
		</div>

		<div class="col-sm-4">
			<h4>請求情報</h4>
			<table class="table table-bordered">
				<tr>
					<th>商品合計</th>
					<td><%= @order.product_sum %></td>
				</tr>
				<tr>
					<th>配送料</th>
					<td><%= @order.postage %></td>
				</tr>
				<tr>
					<th>ご請求額</th>
					<td><%= @order.order_total %></td>
				</tr>
			</table>
		</div>

		<div class="col-sm-12">
			<h4>注文内容</h4>
			<table class="table table-bordered">
				<tr>
					<th>商品</th>
					<th>単価（税込）</th>
					<th>個数</th>
					<th>小計</th>
				</tr>
				<% @ordered_products.each do |ordered_product| %>
				<tr>
					<td><%= ordered_product.name %></td>
					<td><%= ordered_product.price %></td>
					<td><%= ordered_product.quantity %></td>
					<td><%= ordered_product.subtotal_price %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>