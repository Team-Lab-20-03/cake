
<h2>注文履歴一覧</h2>
<table class="table">
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>

<table class="table">
	<% @orders.each do |order| %>
	<tr>
		<td></td>
		<td>
			<%= order.delivery_zip_code %>
			<%= order.delivery_address %>
			<%= order.delivery_name %>
		</td>
		<td><%= order.price %></td>
		<td><%= order.status %></td>
		<td><%= link_to "表示する", order_path %></td>
	</tr>
	<% end %>
</table>