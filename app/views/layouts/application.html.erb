<!DOCTYPE html>
<html>
  <head>
    <title>Cake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <header>

    <div class="navToggle">
        <span></span>
        <span></span>
        <span></span>
        <span>MENU</span>
    </div>

    <div class="header" id="header">
      <nav class="navbar navbar-main navbar-shadow" role="navigation" id="slide-nav">

        <% if admin_signed_in? %>
          <nav class="globalMenuSp">
            <ul>
              <li><%= link_to root_path,method: :get do %>Home<% end %></li>
              <li><%= link_to admins_products_path, method: :get do %> 商品一覧<% end %></li>
              <li><%= link_to admins_customers_path, method: :get do %> 会員一覧<% end %></li>
              <li><%= link_to admins_orders_path, method: :get do %> 注文履歴一覧<% end %></li>
              <li><%= link_to admins_genres_path, method: :get do  %> ジャンル一覧<% end %></li>
              <li><%= link_to destroy_admin_session_path, method: :delete do %> ログアウト<% end %></li>
            </ul>
          </nav>

        <% elsif customer_signed_in? %>

          <nav class="globalMenuSp">
            <ul>
              <li><%= link_to root_path,method: :get do %>Home<% end %></li>
              <li><%= link_to customer_path(current_customer.id), method: :get do %>My Page<% end %></li>
              <li><%= link_to products_path, method: :get do %>Products<% end %></li>
              <li><%= link_to cart_items_path(current_customer.id), method: :get do %>Cart Items<% end %></li>
              <li><%= link_to destroy_customer_session_path, method: :delete do %>Log Out<% end %></li>
            </ul>
          </nav>

        <% else %>

          <nav class="globalMenuSp">
            <ul>
              <li><%= link_to root_path,method: :get do %>Home<% end %></li>
              <li><%= link_to products_path, method: :get do %>Products<% end %></li>
              <li><%= link_to new_customer_registration_path, method: :get do %>Sign Up<% end %></li>
              <li><%= link_to new_customer_session_path, method: :get do %>Log In<% end %></li>
            </ul>
          </nav>

        <% end %>

       </nav>
    </div>
  </header>

  <%= yield %>

  </body>
</html>

